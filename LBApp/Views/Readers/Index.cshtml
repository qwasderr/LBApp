@model IEnumerable<LBApp.Models.Reader>

@{
    ViewData["Title"] = "Читачі";
}

<h1>Читачі</h1>

<p>
    <a asp-action="Create">Створити</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReaderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReaderName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReaderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReaderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReaderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
