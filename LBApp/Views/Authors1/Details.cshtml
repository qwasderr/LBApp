@model LBApp.Models.Author

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Автор</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorBiogr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorBiogr)
        </dd>
    </dl>
</div>
@if (User.IsInRole("admin"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.AuthorId">Редагувати</a> |
        <a asp-action="Details" asp-controller="Books3" asp-route-id="@ViewBag.BookId">Повернутися назад</a>
    </div>
}
else
{
    <div>
        <a asp-action="Details" asp-controller="Books3" asp-route-id="@ViewBag.BookId">Повернутися назад</a>
    </div>
}

