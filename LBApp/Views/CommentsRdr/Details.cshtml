@model LBApp.Models.Comment

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Коментар</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.BookName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reader)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reader.ReaderName)
        </dd>
    </dl>
</div>
@if (User.IsInRole("admin"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ComId">Редагувати</a> |
        @Html.ActionLink("Повернутись назад", "Index", new {Bookid=@ViewBag.Bookid, Readername=User.Identity.Name})
    </div>
}
else
{
    <div>
        @Html.ActionLink("Повернутись назад", "Index", new {Bookid=@ViewBag.Bookid, Readername=User.Identity.Name})
    </div>
}

