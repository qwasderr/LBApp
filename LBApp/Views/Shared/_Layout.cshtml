<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Книжковий магазин</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LBApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Книжковий магазин</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books3" asp-action="Index">Книги</a>
                        </li>
                      
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="Index">Жанри</a>
                        </li>
                        @if (User.IsInRole("admin") || User.IsInRole("user"))
                        {
                            <li class="nav-item">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Books4" asp-action="Index" asp-route-name="@User.Identity.Name">Корзина</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Authors" asp-action="Index">Автори</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Comments" asp-action="Index">Коментарі</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Readers" asp-action="Index">Читачі</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ReadersBooks" asp-action="Index">Читачі-Книги</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Ролі</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Акаунти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PublishingHouses" asp-action="Index">Видавництва</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Diagrams" asp-action="Index">Діаграми</a>
                        </li>
                        <style>
                            .li1 {
                                margin-left: auto;
                                margin-right: 0;
                                
                               
                            }
                        </style>
                        @if (User.Identity.IsAuthenticated)
                        {
                            
                            <li class="li1"><p>@User.Identity.Name</p></li>
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <li class="li1"><input type="submit" value="Вихід"></li>

                            </form>
                            
                        }
                        else
                        {
                            <li class="li1">
                                <a asp-controller="Account" asp-action="Login">Вхід</a>
                                
                            
                                <a asp-controller="Account" asp-action="Register">Реєстрація</a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-white">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LBApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Політика приватності</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
