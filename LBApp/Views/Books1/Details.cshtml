@model LBApp.Models.Book

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Книга</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookPagesCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookPagesCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishingHouse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishingHouse.PhName)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit">
        <input type="hidden" value="@ViewBag.AuthorId" name="AuthorId" />
        @Html.ActionLink("Редагувати", "Edit", new {id= Model?.BookId, authorId=@ViewBag.AuthorId}) |
        @Html.ActionLink("Повернутись назад", "Index","Books1", new {id= @ViewBag.AuthorId, name=ViewBag.AuthorName})
    </form>
    
</div>
