@model IEnumerable<LBApp.Models.PublishingHouse>

@{
    ViewData["Title"] = "Видавництва";
}

<h1>Видавництва</h1>

<p>
    <a asp-action="Create">Створити</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhDescr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhDescr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
